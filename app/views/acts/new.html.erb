<%= form_for @act do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.collection_select(:keywords, Keyword.all, :id, :tag, {}, { multiple: true }) %>

  <%= f.submit %>
<% end %>