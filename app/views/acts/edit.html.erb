<div class='act-form'>
    <%= form_for @act do |f| %>
        <div class='select-container'>
            <%= f.label :keywords %><br>
            <%= f.collection_select(:keywords, Keyword.all, :id, :tag, {selected: @act.keywords.map{|k| k.id}}, { multiple: true}) %>
        </div>
        <%= f.label :name %><br>
        <%= f.text_field :name %><br>

        <%= f.label :description %><br>
        <%= f.text_area :description %><br>

        <%= f.label :image %><br>
        <%= f.text_field :image %><br>

        <%= f.submit %>
    <% end %>
</div>
