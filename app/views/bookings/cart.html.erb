<div class='cart'>
    <h1>Cart</h1>
    
    <% if !@items.empty? %>
        <table>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th></th>
            </tr>
            <% @items.each do |item| %>
                <tr>
                    <td><%= item.gig.name_date %></td>
                    <td><%= number_to_currency(item.gig.price, unit: '£') %></td>
                    <td><%= link_to fa_icon('trash 2x', title: 'Delete'), booking_path(item), method: :delete %></td>
                </tr>
            <% end %>
        </table>
        <br>
        Total: <%= number_to_currency(current_user.cart_total, unit: '£') %>
        
        <%= form_tag('/checkout', method: 'post') do %>
            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                            data-currency="gbp"
                            data-amount="<%= current_user.cart_total * 100 %>"
                            data-locale="auto">
            </script>
        <% end %>
    <% else %>
        <p>Your cart is empty</p>
    <% end %>
</div>
